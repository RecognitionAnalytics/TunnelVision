<UserControl x:Class="YATE.YATEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:YATE"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300" Focusable="True" IsTabStop="True" 
             d:DesignWidth="300"
             mc:Ignorable="d">
    <Grid>
        <RichTextBox x:Name="rtb_Main"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Stretch"
                     AcceptsReturn="True"
                     AcceptsTab="True"
                     AllowDrop="False"
                     BorderThickness="0"
                     CommandManager.PreviewExecuted="rtb_Main_PreviewExecuted"
                     FontFamily="Calibri"
                     FontSize="12"
                     HorizontalScrollBarVisibility="Auto"
                     IsUndoEnabled="True"
                     ScrollViewer.ScrollChanged="rtb_ScrollChanged"
                     SpellCheck.IsEnabled="False"
                     VerticalScrollBarVisibility="Auto" />
        <ProgressBar x:Name="progressGrid"
                     Panel.ZIndex="1"
                     Visibility="Collapsed" />

    </Grid>
</UserControl>